generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int                @id @default(autoincrement())
  username          String             @unique
  lastLogin         DateTime
  class             String? //GIM1 GIM2 etc...
  tbk               String?
  grades            Grade[]
  absences          Absence[]
  achievements      Achievement[]
  gradeWeightVotes  GradeWeightVote[]
  pushSubscriptions PushSubscription[]
}

model PushSubscription {
  id        Int      @id @default(autoincrement())
  endpoint  String   @unique
  p256dh    String
  auth      String
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Grade {
  id       Int     @id @default(autoincrement())
  code     String
  name     String
  grade    Float
  date     String
  absence  String
  comment  String
  teachers String
  opened   Boolean @default(false)
  user     User    @relation(fields: [userId], references: [id])
  userId   Int
}

model Absence {
  id      Int    @id @default(autoincrement())
  date    String
  motif   String
  duree   String
  cours   String
  matiere String
  horaire String
  user    User   @relation(fields: [userId], references: [id])
  userId  Int
}

model ScraperLog {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  duration  Int
  status    String
  endpoint  String

  @@index([createdAt]) // for querying logs by date
}

model Achievement {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  code       String
  unlockedAt DateTime @default(now())

  @@unique([userId, code])
}

model GradeWeightVote {
  id        Int      @id @default(autoincrement())
  code      String // The module code (e.g. "UE123")
  weight    Float // The user's suggested coefficient
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  updatedAt DateTime @updatedAt

  @@unique([userId, code]) // One vote per user per code
  @@index([code])
}

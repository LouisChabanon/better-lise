generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  lastLogin DateTime
  grades    Grade[]
  absences  Absence[]
}

model Grade {
  id         Int    @id @default(autoincrement())
  code       String
  name       String
  grade      Float
  date       String
  absence    String
  comment    String
  teachers   String
  opened     Boolean @default(false)
  user       User   @relation(fields: [userId], references: [id])
  userId     Int
}

model Absence {
  id      Int    @id @default(autoincrement())
  date    String
  motif   String
  duree   String
  cours   String
  matiere String
  horaire String
  user    User   @relation(fields: [userId], references: [id])
  userId  Int
}

model ScraperLog {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  duration  Int
  status    String
  endpoint  String

  @@index([createdAt]) // for querying logs by date
}